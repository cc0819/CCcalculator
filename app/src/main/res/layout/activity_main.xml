<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cheng.cc.cccalculator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#333333"
        android:orientation="vertical">

        <TextView
            android:id="@+id/output_window"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="right|bottom"
            android:text="0"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@android:color/white"
            android:textIsSelectable="true"
            android:textSize="50sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clear_button"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_marginBottom="1px"
                android:layout_marginLeft="1px"
                android:layout_weight="1"
                android:background="#cacbcd"
                android:text="AC"
                android:textSize="35sp" />

            <Button
                android:id="@+id/plusorminus_button"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_marginBottom="1px"
                android:layout_marginLeft="1px"
                android:layout_weight="1"
                android:background="#cacbcd"
                android:text="+/-"
                android:textSize="35sp" />

            <Button
                android:id="@+id/percent_button"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_marginBottom="1px"
                android:layout_marginLeft="1px"
                android:layout_weight="1"
                android:background="#cacbcd"
                android:text="%"
                android:textSize="35sp" />

            <Button
                android:id="@+id/division_button"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_marginBottom="1px"
                android:layout_marginLeft="1px"
                android:layout_weight="1"
                android:background="#f99113"
                android:textColor="@android:color/white"
                android:text="รท"
                android:textSize="35sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/seven_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_marginBottom="1px"
                android:layout_marginLeft="1px"
                android:layout_weight="1"
                android:background="#d0d2d4"
                android:text="@string/seven"
                android:textSize="35sp" />

            <Button
                android:id="@+id/eight_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_marginBottom="1px"
                android:layout_marginLeft="1px"
                android:layout_weight="1"
                android:background="#d0d2d4"
                android:text="@string/eight"
                android:textSize="35sp" />

            <Button
                android:id="@+id/nine_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_marginBottom="1px"
                android:layout_marginLeft="1px"
                android:layout_weight="1"
                android:background="#d0d2d4"
                android:text="@string/nine"
                android:textSize="35sp" />

            <Button
                android:id="@+id/product_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_marginBottom="1px"
                android:layout_marginLeft="1px"
                android:layout_weight="1"
                android:background="#f99113"
                android:text="@string/product"
                android:textColor="@android:color/white"
                android:textSize="35sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/four_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_marginBottom="1px"
                android:layout_marginLeft="1px"
                android:layout_weight="1"
                android:background="#d0d2d4"
                android:text="@string/four"
                android:textSize="35sp" />

            <Button
                android:id="@+id/five_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1px"
                android:layout_marginLeft="1px"
                android:gravity="center"
                android:layout_weight="1"
                android:background="#d0d2d4"
                android:text="@string/five"
                android:textSize="35sp" />

            <Button
                android:id="@+id/six_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1px"
                android:layout_marginLeft="1px"
                android:gravity="center"
                android:layout_weight="1"
                android:background="#d0d2d4"
                android:text="@string/six"
                android:textSize="35sp" />

            <Button
                android:id="@+id/minus_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1px"
                android:layout_marginLeft="1px"
                android:gravity="center"
                android:layout_weight="1"
                android:background="#f99113"
                android:text="@string/minus"
                android:textColor="@android:color/white"
                android:textSize="35sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/one_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1px"
                android:layout_marginLeft="1px"
                android:gravity="center"
                android:layout_weight="1"
                android:background="#d0d2d4"
                android:text="@string/one"
                android:textSize="35sp" />

            <Button
                android:id="@+id/two_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1px"
                android:layout_marginLeft="1px"
                android:gravity="center"
                android:layout_weight="1"
                android:background="#d0d2d4"
                android:text="@string/two"
                android:textSize="35sp" />

            <Button
                android:id="@+id/three_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1px"
                android:layout_marginLeft="1px"
                android:gravity="center"
                android:layout_weight="1"
                android:background="#d0d2d4"
                android:text="@string/three"
                android:textSize="35sp" />

            <Button
                android:id="@+id/plus_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1px"
                android:layout_marginLeft="1px"
                android:gravity="center"
                android:layout_weight="1"
                android:background="#f99113"
                android:text="@string/plus"
                android:textColor="@android:color/white"
                android:textSize="35sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            <Button
                android:id="@+id/zero_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_marginBottom="1px"
                android:layout_marginLeft="1px"
                android:background="#d0d2d4"
                android:text="@string/zero"
                android:textSize="35sp" />


            <Button
                android:id="@+id/point_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1px"
                android:layout_marginLeft="1px"
                android:gravity="center"
                android:layout_weight="1"
                android:background="#d0d2d4"
                android:text="@string/point"
                android:textSize="35sp" />


            <Button
                android:id="@+id/equal_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginBottom="1px"
                android:layout_marginLeft="1px"
                android:background="#f99113"
                android:text="@string/equal"
                android:textColor="@android:color/white"
                android:textSize="35sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
